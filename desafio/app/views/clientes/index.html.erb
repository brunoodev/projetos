<h2>Clientes</h2>
<% flash.each do |key,value| %>
   <div class="alert alert-success" role="alert">
    <a href="javascript:;" class="alert-link"><%=value%></a>
  </div>
<% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome</th>
      <th>E-mail</th>
      <th>Nascimento</th>
      <th>Op√ß&otilde;es</th>
    </tr>
  </thead>
  <tbody>
    <% @clientes.each do |cli| %>
    <tr>
      <td><%=cli.id%></td>
      <td><%=cli.nome%></td>
      <td><%=cli.email%></td>
      <td><%=cli.datanascimento.strftime("%d/%m/%Y")%></td>
      <td>

        <%=
          link_to "", 
          edit_cliente_path(cli), 
          :class=>"btn btn-primary glyphicon glyphicon-pencil"
        %>
       
        <%=
          link_to "", 
          cli, 
          :class=>"btn btn-primary glyphicon glyphicon-remove", 
          :data=>{:confirm =>"Voce tem certeza?"}, 
          :method => :delete 
        %>
       
      </td>
    </tr>
    <% end %>
  </tbody>
</table> 
 <p><%= link_to "Novo cadastro", new_cliente_path, :class => "btn btn-primary" %></p>







  	