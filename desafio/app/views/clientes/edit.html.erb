<h2>Atualizar</h2>
<%= form_for @cliente do |f| %>
	<fieldset>
	<legend>Formulario</legend>
	<% if @cliente.errors.any? %>
		<% @cliente.errors.full_messages.each do |message| %>
			<div class="alert alert-danger" role="alert">
			    <a href="javascript:;" class="alert-link"><%=message%></a>
			  </div>
		<% end %>
	<% end %>
	<div class="form-group">
		<div><%= f.label :nome %></div>
		<div><%= f.text_field :nome, :required => "true" %></div>
	</div>
	<div class="form-group">
		<div><%= f.label :email %></div>
		<div><%= f.email_field :email, :required => "true" %></div>
	</div>
	<div class="form-group">
		<div><%= f.label :datanascimento %></div>
		<div>
			<%= f.date_field :datanascimento,
				:required => "true", 
				:placeholder =>"DD/MM/AAAA",
				:value => @cliente.try(:datanascimento).try(:strftime,'%d/%m/%Y') %>
		</div>
	</div>
	<div><%= f.submit "Atualizar", :class => "btn btn-primary" %></div>
	</fieldset>
<% end %>
